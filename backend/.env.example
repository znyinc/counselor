# Development Environment Configuration
NODE_ENV=development
PORT=3001

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# OpenAI Configuration (Optional - leave empty to use mock client)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT=30000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/ai-career-counseling

# Security Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h
ENCRYPTION_KEY=your_encryption_key_here
SESSION_SECRET=your_session_secret_here

# Default Admin Account
DEFAULT_ADMIN_EMAIL=admin@career-counseling.com
DEFAULT_ADMIN_PASSWORD=Admin@123

# Rate Limiting
API_RATE_LIMIT=1000
PROFILE_RATE_LIMIT=10
WEBHOOK_RATE_LIMIT=100

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/career-counseling

# Logging Configuration
LOG_LEVEL=debug

# Performance Configuration
CACHE_TTL=300000
STATIC_CACHE_TTL=1800000