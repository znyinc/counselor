# Production Environment Configuration
NODE_ENV=production
PORT=3001

# Database Configuration (managed by AWS RDS)
DATABASE_URL=postgres://counselor_user:${DB_PASSWORD}@${DB_ENDPOINT}:5432/counselor_db
DATABASE_SSL=true
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=20

# Redis Configuration (managed by AWS ElastiCache)
REDIS_URL=redis://${REDIS_ENDPOINT}:6379
REDIS_TLS=true

# Frontend URL
FRONTEND_URL=https://your-domain.com

# OpenAI Configuration
OPENAI_API_KEY=${OPENAI_API_KEY}
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT=30000

# Security Configuration (from AWS Secrets Manager)
JWT_SECRET=${JWT_SECRET}
ENCRYPTION_KEY=${ENCRYPTION_KEY}
SESSION_SECRET=${SESSION_SECRET}

# Rate Limiting (Redis-backed for horizontal scaling)
API_RATE_LIMIT=1000
PROFILE_RATE_LIMIT=10
WEBHOOK_RATE_LIMIT=100
RATE_LIMIT_WINDOW_MS=900000

# Webhook Configuration
WEBHOOK_SECRET=${WEBHOOK_SECRET}
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/career-counseling

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DESTINATION=cloudwatch

# Performance Configuration
CACHE_TTL=300000
STATIC_CACHE_TTL=1800000
REQUEST_TIMEOUT=30000

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_TIMEOUT=5000

# AWS Configuration
AWS_REGION=us-east-1
AWS_S3_BUCKET=counselor-assets-${ENVIRONMENT}
AWS_CLOUDWATCH_LOG_GROUP=/aws/ecs/counselor-${ENVIRONMENT}

# CORS Configuration
CORS_ORIGIN=https://your-domain.com
CORS_CREDENTIALS=true

# Session Configuration
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict
SESSION_MAX_AGE=86400000

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# Error Handling
ENABLE_ERROR_REPORTING=true
SENTRY_DSN=${SENTRY_DSN}

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_WEBHOOKS=true
ENABLE_FILE_UPLOAD=true
ENABLE_CACHING=true